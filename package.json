{
  "name": "@benjollymore/ctxify",
  "version": "0.5.0",
  "description": "Persistent workspace knowledge for AI coding agents.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ctxify": "./dist/bin/ctxify.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "skills"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "claude",
    "codex",
    "coding-agent",
    "context",
    "context-engineering",
    "copilot",
    "cursor",
    "developer-tools",
    "llm",
    "monorepo",
    "multi-repo",
    "scaffolding",
    "workspace"
  ],
  "author": "Ben Jollymore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjollymore/ctxify.git"
  },
  "homepage": "https://github.com/benjollymore/ctxify#readme",
  "bugs": {
    "url": "https://github.com/benjollymore/ctxify/issues"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@inquirer/prompts": "^7.10.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "commander": "^12.1.0",
    "eslint": "^10.0.2",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.8.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
